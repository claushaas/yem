{
  "name": "yoga-em-movimento",
  "description": "Plataforma da Yoga em Movimento Ltda.",
  "license": "UNLICENSED",
  "private": true,
  "author": {
    "name": "Claus Haas",
    "email": "claus@yoga.app.br",
    "url": "https://github.com/claushaas"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/claushaas/yem.git"
  },
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": ">=20.12.2"
  },
  "bugs:": "https://github.com/claushaas/yem/issues",
  "scripts": {
    "build": "remix vite:build",
    "predev": "npx prisma migrate dev",
    "dev": "vite",
    "prestart": "npx prisma migrate deploy",
    "start": "node ./build/server/index.js",
    "typecheck": "tsc --noEmit",
    "update": "npx npm-check-updates -i",
    "up": "docker compose up -d --build",
    "down": "docker compose down",
    "lint": "xo",
    "db:reset": "npx prisma migrate reset"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.574.0",
    "@aws-sdk/client-secrets-manager": "^3.574.0",
    "@aws-sdk/client-sesv2": "^3.574.0",
    "@aws-sdk/credential-providers": "^3.574.0",
    "@cloudflare/stream-react": "^1.9.1",
    "@epic-web/remember": "^1.0.2",
    "@heroicons/react": "^2.1.3",
    "@newrelic/winston-enricher": "^4.0.1",
    "@prisma/client": "^5.13.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-form": "^0.0.3",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-switch": "^1.0.3",
    "@remix-run/express": "^2.9.2",
    "@remix-run/node": "^2.9.2",
    "@remix-run/react": "^2.9.2",
    "@unpic/react": "^0.1.14",
    "axios": "^1.6.8",
    "compression": "^1.7.4",
    "express": "^4.19.2",
    "framer-motion": "^11.1.9",
    "fuse.js": "^7.0.0",
    "helmet": "^7.1.0",
    "http2-express-bridge": "^1.0.7",
    "isbot": "^5.1.6",
    "joi": "^17.13.1",
    "morgan": "^1.10.0",
    "newrelic": "latest",
    "nprogress": "^0.2.0",
    "prisma": "^5.13.0",
    "qs": "^6.12.1",
    "quill": "^2.0.1",
    "quill-delta-to-html": "^0.12.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-phone-number-input": "^3.4.1",
    "react-select": "^5.8.0",
    "remix-create-express-app": "^0.3.7",
    "remix-utils": "^7.6.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@remix-run/dev": "^2.9.2",
    "@tailwindcss/forms": "^0.5.7",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/newrelic": "^9.14.3",
    "@types/nprogress": "^0.2.3",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/spdy": "^3.4.9",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.4.38",
    "remix-development-tools": "^4.1.6",
    "remix-express-dev-server": "^0.2.4",
    "tailwindcss": "^3.4.3",
    "tailwindcss-radix": "^3.0.3",
    "tailwindcss-radix-colors": "^1.2.0",
    "tsx": "^4.9.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "xo": "^0.58.0"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "xo": {
    "extends": "xo-react",
    "rules": {
      "n/prefer-global/process": [
        "error",
        "always"
      ],
      "react/react-in-jsx-scope": "off",
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "property",
          "format": [
            "camelCase",
            "UPPER_CASE",
            "PascalCase",
            "snake_case"
          ],
          "leadingUnderscore": "allow"
        }
      ],
      "unicorn/filename-case": [
        "error",
        {
          "case": "kebabCase",
          "ignore": [
            ".*_.*tsx"
          ]
        }
      ]
    },
    "ignores": [
      "postcss.config.js",
      "remix-handler.js",
      "server.js"
    ]
  }
}

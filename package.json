{
  "name": "yoga-em-movimento",
  "description": "Plataforma da Yoga em Movimento Ltda.",
  "license": "UNLICENSED",
  "private": true,
  "author": {
    "name": "Claus Haas",
    "email": "claus@yoga.app.br",
    "url": "https://github.com/claushaas"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/claushaas/yem.git"
  },
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": ">=22.11.0"
  },
  "bugs:": "https://github.com/claushaas/yem/issues",
  "scripts": {
    "build": "react-router build",
    "predev": "npx prisma migrate dev",
    "dev": "react-router dev",
    "prestart": "npx prisma migrate deploy",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "tsc --noEmit",
    "update": "npx npm-check-updates -i",
    "up": "docker compose up -d --build",
    "down": "docker compose down",
    "lint": "xo",
    "db:reset": "npx prisma migrate reset"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.699.0",
    "@aws-sdk/client-secrets-manager": "^3.699.0",
    "@aws-sdk/client-sesv2": "^3.699.0",
    "@aws-sdk/credential-providers": "^3.699.0",
    "@cloudflare/stream-react": "^1.9.1",
    "@epic-web/remember": "^1.1.0",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-form": "^0.1.0",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@react-router/express": "^7.0.1",
    "@react-router/node": "^7.0.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@unpic/react": "^0.1.14",
    "@vidstack/react": "^1.11.21",
    "axios": "^1.7.8",
    "clipboard-copy": "^4.0.1",
    "framer-motion": "^11.11.17",
    "fuse.js": "^7.0.0",
    "hls.js": "^1.5.17",
    "isbot": "^5.1.17",
    "joi": "^17.13.3",
    "nprogress": "^0.2.0",
    "prisma": "^5.22.0",
    "qs": "^6.13.1",
    "quill": "^2.0.2",
    "quill-delta-to-html": "^0.12.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-phone-number-input": "^3.4.9",
    "react-router": "^7.0.1",
    "react-select": "^5.8.3",
    "remix-utils": "^7.7.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@react-router/dev": "^7.0.1",
    "@react-router/fs-routes": "^7.0.1",
    "@tailwindcss/forms": "^0.5.9",
    "@types/nprogress": "^0.2.3",
    "@types/qs": "^6.9.17",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "lightningcss": "^1.28.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "tailwindcss-radix": "^3.0.5",
    "tailwindcss-radix-colors": "^1.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.3",
    "xo": "^0.59.3"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "xo": {
    "extends": "xo-react",
    "rules": {
      "import/extensions": "off",
      "n/prefer-global/process": [
        "error",
        "always"
      ],
      "n/file-extension-in-import": [
        "error",
        "always"
      ],
      "react/react-in-jsx-scope": "off",
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "property",
          "format": [
            "camelCase",
            "UPPER_CASE",
            "PascalCase",
            "snake_case"
          ],
          "leadingUnderscore": "allow"
        }
      ],
      "unicorn/filename-case": [
        "error",
        {
          "case": "kebabCase",
          "ignore": [
            ".*_.*tsx"
          ]
        }
      ]
    },
    "ignores": [
      "postcss.config.js",
      "remix-handler.js",
      "server.js"
    ]
  }
}
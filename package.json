{
  "name": "yoga-em-movimento",
  "description": "Plataforma da Yoga em Movimento Ltda.",
  "license": "UNLICENSED",
  "private": true,
  "author": {
    "name": "Claus Haas",
    "email": "claus@yoga.app.br",
    "url": "https://github.com/claushaas"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/claushaas/yem.git"
  },
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bugs:": "https://github.com/claushaas/yem/issues",
  "scripts": {
    "build": "remix vite:build",
    "predev": "npx prisma migrate dev",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "prestart": "npx prisma migrate deploy",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "update": "npx npm-check-updates -i",
    "up": "docker compose up -d --build",
    "down": "docker compose down",
    "test": "xo",
    "db:reset": "npx prisma migrate reset"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.540.0",
    "@aws-sdk/client-secrets-manager": "^3.543.0",
    "@aws-sdk/client-sesv2": "^3.540.0",
    "@aws-sdk/credential-providers": "^3.540.0",
    "@cloudflare/stream-react": "^1.9.1",
    "@heroicons/react": "^2.1.3",
    "@newrelic/winston-enricher": "^4.0.1",
    "@prisma/client": "^5.12.1",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-form": "^0.0.3",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-switch": "^1.0.3",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@remix-run/serve": "^2.8.1",
    "@unpic/react": "^0.1.11",
    "axios": "^1.6.8",
    "framer-motion": "^11.0.24",
    "fuse.js": "^7.0.0",
    "isbot": "^5.1.4",
    "joi": "^17.12.3",
    "newrelic": "latest",
    "prisma": "^5.12.1",
    "quill": "^2.0.0-rc.5",
    "quill-delta-to-html": "^0.12.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-phone-number-input": "^3.3.10",
    "react-select": "^5.8.0",
    "remix-utils": "^7.5.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@remix-run/dev": "^2.8.1",
    "@tailwindcss/forms": "^0.5.7",
    "@types/newrelic": "^9.14.3",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "remix-development-tools": "^4.1.4",
    "tailwindcss": "^3.4.3",
    "tailwindcss-radix": "^3.0.3",
    "tailwindcss-radix-colors": "^1.2.0",
    "tsx": "^4.7.2",
    "typescript": "^5.4.3",
    "vite": "^5.2.8",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "xo": "^0.58.0"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "xo": {
    "extends": "xo-react",
    "rules": {
      "n/prefer-global/process": [
        "error",
        "always"
      ],
      "react/react-in-jsx-scope": "off",
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "property",
          "format": [
            "camelCase",
            "UPPER_CASE",
            "PascalCase",
            "snake_case"
          ],
          "leadingUnderscore": "allow"
        }
      ],
      "unicorn/filename-case": [
        "error",
        {
          "case": "kebabCase",
          "ignore": [
            ".*_.*tsx"
          ]
        }
      ]
    },
    "ignores": [
      "postcss.config.js",
      "remix-server-utils.js"
    ]
  }
}
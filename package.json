{
  "name": "yoga-em-movimento",
  "description": "Plataforma da Yoga em Movimento Ltda.",
  "license": "UNLICENSED",
  "private": true,
  "author": {
    "name": "Claus Haas",
    "email": "claus@yoga.app.br",
    "url": "https://github.com/claushaas"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/claushaas/yem.git"
  },
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bugs:": "https://github.com/claushaas/yem/issues",
  "scripts": {
    "build": "remix vite:build && tsc --project tsconfig.json",
    "predev": "npx prisma migrate dev",
    "dev": "tsx watch --ignore ./vite*.mjs ./server.ts",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "prestart": "npx prisma migrate deploy",
    "start": "node ./build/server.js",
    "typecheck": "tsc --noEmit --skipLibCheck --project tsconfig.json",
    "update": "npx npm-check-updates -i",
    "up": "docker compose up -d --build",
    "down": "docker compose down",
    "test": "xo"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.535.0",
    "@aws-sdk/client-secrets-manager": "^3.535.0",
    "@aws-sdk/client-sesv2": "^3.535.0",
    "@aws-sdk/credential-providers": "^3.535.0",
    "@cloudflare/stream-react": "^1.9.1",
    "@heroicons/react": "^2.1.1",
    "@newrelic/winston-enricher": "^4.0.1",
    "@prisma/client": "^5.11.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-form": "^0.0.3",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-separator": "^1.0.3",
    "@remix-run/express": "^2.8.1",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@unpic/react": "^0.1.11",
    "api": "^6.1.1",
    "axios": "^1.6.8",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.2.0",
    "framer-motion": "^11.0.18",
    "fuse.js": "^7.0.0",
    "isbot": "^5.1.2",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "newrelic": "latest",
    "prisma": "^5.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-phone-number-input": "^3.3.9",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@remix-run/dev": "^2.8.1",
    "@tailwindcss/forms": "^0.5.7",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/newrelic": "^9.14.3",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "cross-env": "^7.0.3",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "remix-development-tools": "^4.0.10",
    "tailwindcss": "^3.4.1",
    "tailwindcss-radix": "^2.8.0",
    "tailwindcss-radix-colors": "^1.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vite": "^5.2.2",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "xo": "^0.58.0"
  },
  "xo": {
    "extends": "xo-react",
    "rules": {
      "n/prefer-global/process": [
        "error",
        "always"
      ],
      "react/react-in-jsx-scope": "off",
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "property",
          "format": [
            "camelCase",
            "UPPER_CASE",
            "PascalCase",
            "snake_case"
          ],
          "leadingUnderscore": "allow"
        }
      ]
    },
    "ignores": [
      "postcss.config.js",
      "remix-server-utils.js"
    ]
  }
}
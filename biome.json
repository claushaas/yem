{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**/*.js",
			"**/*.ts",
			"**/*.tsx",
			"**/*.css",
			"**/*.scss",
			"**/*.html",
			"**/*.json",
			"**/*.md",
			"!**/app/app.css",
			"!**/supabase/functions/",
			"!**/node_modules",
			"!**/dist",
			"!**/build",
			"!**/coverage",
			"!**/ios",
			"!**/android",
			"!**/.git",
			"!**/.vscode",
			"!**/.react-router",
			"!**/worker-configuration.d.ts",
			"!**/*.d.ts",
			"!**/*.spec.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"domains": {
			"react": "all"
		},
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
